    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const analyzeBtn = document.querySelector('.analyze-btn');
            const loadingElement = document.querySelector('.loading');
            const resultsElement = document.querySelector('.feedback-content');
            const scoreElement = document.querySelector('.score-value');
            const scoreCircle = document.querySelector('.score-circle');
            
            // File upload styling
            const fileUpload = document.querySelector('.file-upload');
            const fileInput = document.querySelector('#resume');
            
            fileInput.addEventListener('change', function(e) {
                if (this.files && this.files.length > 0) {
                    fileUpload.innerHTML = `
                        <i class="fas fa-file-alt"></i>
                        <p>${this.files[0].name}</p>
                        <span>Click to change</span>
                    `;
                    fileUpload.appendChild(fileInput);
                }
            });
            
            // Analyze button handler
            analyzeBtn.addEventListener('click', function() {
                const jobDescription = document.getElementById('job_description').value;
                
                if (!fileInput.files || fileInput.files.length === 0) {
                    alert('Please upload your resume first');
                    return;
                }
                
                if (!jobDescription.trim()) {
                    alert('Please paste the job description you want to target');
                    return;
                }
                
                // Show loading state
                loadingElement.classList.remove('hidden');
                resultsElement.classList.add('hidden');
                analyzeBtn.disabled = true;
                
                // Simulate AI analysis
                setTimeout(() => {
                    // Generate a random score between 50-95 for demo purposes
                    const newScore = Math.floor(Math.random() * 45) + 50;
                    scoreElement.textContent = `${newScore}%`;
                    
                    // Update the score circle with animation
                    scoreCircle.style.background = `conic-gradient(var(--primary) 0%, var(--secondary) ${newScore}%, rgba(255, 255, 255, 0.1) 0%)`;
                    
                    // Show results
                    loadingElement.classList.add('hidden');
                    resultsElement.classList.remove('hidden');
                    analyzeBtn.disabled = false;
                    
                    // Add glow effect to celebrate
                    scoreCircle.classList.add('glow');
                    setTimeout(() => scoreCircle.classList.remove('glow'), 3000);
                }, 2500);
            });
            
            // Smooth scrolling for navigation links
            document.querySelectorAll('nav a').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    if (targetId !== '#') {
                        document.querySelector(targetId).scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                });
            });
            
            // CTA button scroll to upload section
            document.querySelector('.cta-button').addEventListener('click', function() {
                document.querySelector('.upload-section').scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
</body>
